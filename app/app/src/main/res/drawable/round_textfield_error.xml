<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <!-- Custom shape with rounded corners and background color -->
        <shape android:shape="rectangle">
            <solid android:color="#F1F1F1" /> <!-- Background color -->
            <corners android:radius="15dp" /> <!-- Corner radius -->
            <size
                android:width="287dp"
                android:height="43dp" /> <!-- Width and height -->
        </shape>
    </item>
    <item>
        <!-- Blue outline shape -->
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Transparent color to prevent background color overlap -->
            <stroke
                android:width="2dp"
                android:color="@color/red" /> <!-- Blue outline -->
            <corners android:radius="15dp" /> <!-- Corner radius -->
            <size
                android:width="287dp"
                android:height="43dp" /> <!-- Width and height -->
        </shape>
    </item>
</layer-list>
