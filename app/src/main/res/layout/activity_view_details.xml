<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/white">

    <!-- Main layout container -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Dashboard text -->
        <View
            android:id="@+id/dash_vi"
            android:layout_width="match_parent"
            android:layout_height="193dp"
            android:background="@drawable/flip_top"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="-20dp"
            tools:layout_editor_absoluteY="0dp" />

    <!--    after your work is done REMOVE-->

    <ImageView
        android:id="@+id/viewClientDtls_Back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="33dp"
        android:background="@drawable/round"
        android:importantForAccessibility="no"
        android:src="@drawable/back_btn"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="37dp" />

    <TextView
        android:id="@+id/dash_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Clients details"
        android:textColor="@color/white"
        android:textSize="25sp"
        tools:ignore="HardcodedText,SpUsage" />

    <!-- Card view for proper layout -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cv_1"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="95dp"
        android:layout_marginEnd="15dp"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="25dp"
        app:cardElevation="5dp"
        tools:ignore="TextSizeCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30sp"
                android:layout_marginTop="25sp"
                android:fontFamily="@font/poppins_bold"
                android:text="@string/find_a_client_details"
                android:textColor="#4D4D4D"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/searchField"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/usernameTitleTextView"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/round_textfield"
                android:drawableStart="@drawable/search_icon"
                android:ellipsize="start"
                android:gravity="center"
                android:fontFamily="@font/poppins_regular"
                android:textCursorDrawable="@null"
                android:hint="Find by Name, Client-Id, Circuit No. "
                android:importantForAutofill="no"
                android:inputType="text"
                android:paddingStart="15sp"
                android:paddingTop="13sp"
                android:paddingBottom="12sp"
                android:textColor="@color/black"
                android:textColorHint="#546E7A"
                android:textSize="12sp"
                tools:ignore="HardcodedText,ObsoleteLayoutParam,RtlSymmetry,TextFields,TextSizeCheck,VisualLintTextFieldSize" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20sp"
                android:layout_marginTop="30sp"
                android:layout_marginEnd="20sp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/searchButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/search_button"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/search"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/subHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cv_1"
        android:layout_marginTop="22sp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:fontFamily="@font/poppins_bold"
            android:text="@string/recent_discoveries"
            android:textColor="#4D4D4D"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="182dp"
        android:layout_below="@id/subHeading"
        android:orientation="vertical">
        <!--        imageView using cardView-->
        <!--        <ImageView-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:background="@drawable/cardview"-->
        <!--            android:layout_gravity="center"-->
        <!--            android:layout_marginTop="15dp"-->
        <!--            android:layout_marginHorizontal="24sp"-->
        <!--            />-->


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80sp"
                android:padding="11dp">

                <TextView
                    android:id="@+id/showId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15sp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/_2001"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/showUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20sp"
                    android:layout_marginEnd="15dp"
                    android:layout_toStartOf="@id/progressStatusBar"
                    android:layout_toEndOf="@id/showId"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/usernameview"
                    android:textSize="15sp" />

                <ProgressBar
                    android:id="@+id/progressStatusBar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="90sp"
                    android:layout_height="8sp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15sp"
                    android:max="100"
                    android:progress="20"
                    android:progressBackgroundTint="#B3B3B3"
                    android:progressTint="#25B800"
                    tools:ignore="SmallSp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/progressStatusBar"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10sp"
                    android:layout_marginEnd="8sp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="93dp"
                        android:layout_height="match_parent"
                        android:drawablePadding="5sp"
                        android:fontFamily="@font/poppins_regular"
                        android:text="@string/in_progress"
                        android:textColor="#757575"
                        android:textSize="10sp"
                        app:drawableStartCompat="@drawable/bluedot"
                        tools:ignore="SmallSp,TextContrastCheck" />
                </RelativeLayout>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

    </RelativeLayout>

</ScrollView>