<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- ðŸ”¹ Top Background -->
        <View
            android:id="@+id/dash_vi"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/flip_top" />

        <!-- ðŸ”¹ Back Button -->
        <ImageView
            android:id="@+id/viewClientDtls_Back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="33dp"
            android:src="@drawable/back_btn"
            android:contentDescription="Back" />

        <!-- ðŸ”¹ Title -->
        <TextView
            android:id="@+id/dash_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Clients Details"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <!-- ðŸ”¹ Search Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dash_vi"
            android:layout_marginStart="15dp"
            android:layout_marginTop="-50dp"
            android:layout_marginEnd="15dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="8dp"
            android:backgroundTint="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

<!--                <TextView-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginStart="10dp"-->
<!--                    android:layout_marginTop="10dp"-->
<!--                    android:fontFamily="@font/poppins_bold"-->
<!--                    android:text="Find a Client"-->
<!--                    android:textColor="@color/grey"-->
<!--                    android:textSize="16sp" />-->

                <EditText
                    android:id="@+id/searchField"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/round_textfield"
                    android:drawableStart="@drawable/search_icon"
                    android:drawablePadding="10dp"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="Name, Client-ID, Circuit No."
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:paddingStart="15dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hintFont"
                    android:textSize="14sp"
                    tools:ignore="RtlSymmetry" />

<!--                <androidx.appcompat.widget.AppCompatButton-->
<!--                    android:id="@+id/searchButton"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="48dp"-->
<!--                    android:layout_gravity="center"-->
<!--                    android:layout_marginTop="20dp"-->
<!--                    android:background="@drawable/radius_button"-->
<!--                    android:backgroundTint="@color/blue"-->
<!--                    android:fontFamily="@font/poppins_medium"-->
<!--                    android:text="Search"-->
<!--                    android:textAllCaps="false"-->
<!--                    android:textColor="@color/white"-->
<!--                    android:textSize="16sp"-->
<!--                    app:cornerRadius="12dp" />-->
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ðŸ”¹ Recent Clients Section -->
        <LinearLayout
            android:id="@+id/subHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cv_1"
            android:layout_marginTop="25dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Recent Clients"
                android:textColor="#4D4D4D"
                android:textSize="16sp" />

            <!-- ðŸ”¹ RecyclerView for Recent Clients -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recentClientsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:clipToPadding="false"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                tools:listitem="@layout/item_client_card" />

            <!-- ðŸ”¹ ProgressBar Loader -->
            <ProgressBar
                android:id="@+id/loadingProgress"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:indeterminate="true"
                android:indeterminateTint="@color/blue"
                android:visibility="gone" />
        </LinearLayout>

    </RelativeLayout>
</ScrollView>
