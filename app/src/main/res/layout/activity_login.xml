<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".LoginActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingHorizontal="24dp"
            android:paddingBottom="36dp">

            <!-- Logo -->
            <ImageView
                android:id="@+id/logoImageView"
                android:layout_width="140dp"
                android:layout_height="130dp"
                android:layout_marginTop="48dp"
                android:src="@drawable/logo"
                android:adjustViewBounds="true"
                android:contentDescription="@string/app_name" />

            <!-- Welcome -->
            <TextView
                android:id="@+id/welcomeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="@font/poppins_bold"
                android:text="Welcome"
                android:textColor="@color/blue"
                android:textSize="22sp" />

            <!-- Subheading -->
            <TextView
                android:id="@+id/subHeadingTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/poppins_regular"
                android:text="@string/your_service_in_your_hand"
                android:textColor="#7C7C7C"
                android:textSize="14sp"
                android:gravity="center" />

            <!-- Username Field -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Username"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/emailEditText"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/round_textfield"
                android:drawableStart="@drawable/user_icon"
                android:drawablePadding="12dp"
                android:fontFamily="@font/poppins_regular"
                android:hint="@string/username"
                android:importantForAutofill="no"
                android:inputType="textEmailAddress"
                android:paddingStart="16dp"
                android:textColor="@color/black"
                android:textColorHint="@color/hintFont"
                android:textCursorDrawable="@null"
                android:textSize="15sp" />

            <!-- Password Field -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/poppins_regular"
                android:text="Password"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">

                <EditText
                    android:id="@+id/passwordEditText"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/round_textfield"
                    android:drawableStart="@drawable/password_icon"
                    android:drawablePadding="12dp"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="@string/password"
                    android:importantForAutofill="no"
                    android:inputType="textPassword"
                    android:paddingStart="16dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/hintFont"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/passwordVisibilityToggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="12dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="8dp"
                    android:src="@drawable/ic_password_visibility_off"
                    android:contentDescription="@string/show_password" />
            </RelativeLayout>

            <!-- Login Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/loginButton"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="45dp"
                android:background="@drawable/radius_button"
                android:backgroundTint="@color/blue"
                android:fontFamily="@font/poppins_medium"
                android:text="@string/login"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <!-- Bottom Shape -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="80dp"
                android:background="@drawable/bottom_shape">

                <TextView
                    android:id="@+id/versionTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginBottom="60dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Version 1.0"
                    android:textColor="@color/grey"
                    android:textSize="14sp" />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
