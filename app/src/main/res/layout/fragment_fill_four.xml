                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/grey"
                                android:ellipsize="start"
                                android:ems="10"
                                android:fontFamily="@font/poppins_regular"
                                android:gravity="center"
                                android:hint="@string/hintValue"
                                android:importantForAutofill="no"
                                android:inputType="textPersonName"
                                android:textColor="@color/black"
                                android:textColorHint="@color/hintFont"
                                tools:ignore="DuplicateSpeakableTextCheck,TextContrastCheck,VisualLintTextFieldSize" />

                            <EditText
                                android:id="@+id/enterNumber"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/grey"
                                android:ellipsize="start"
                                android:ems="10"
                                android:fontFamily="@font/poppins_regular"
                                android:gravity="center"
                                android:hint="@string/hintValue"
                                android:importantForAutofill="no"
                                android:inputType="textPersonName"
                                android:textColor="@color/black"
                                android:textColorHint="@color/hintFont"
                                tools:ignore="DuplicateSpeakableTextCheck,TextContrastCheck,TextFields,VisualLintTextFieldSize" />
                        </LinearLayout>

                    </LinearLayout>

                    <RelativeLayout
