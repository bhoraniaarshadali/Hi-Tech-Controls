                                android:inputType="textPersonName"
                                android:textColor="@color/black"
                                android:textColorHint="@color/hintFont"
                                tools:ignore="TextFields,TextContrastCheck" />

                            <EditText
                                android:id="@+id/enterBODYcon"
                                android:layout_width="match_parent"
