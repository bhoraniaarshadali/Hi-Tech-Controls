                            <EditText
                                android:id="@+id/enterName2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/grey"
                                android:ellipsize="start"
                                android:ems="10"
                                android:fontFamily="@font/poppins_regular"
                                android:gravity="center"
                                android:hint="@string/hintValue"
                                android:importantForAutofill="no"
                                android:inputType="textPersonName"
                                android:textColor="@color/black"
                                android:textColorHint="@color/hintFont"
                                tools:ignore="DuplicateSpeakableTextCheck,TextContrastCheck,VisualLintTextFieldSize" />

                            <EditText
                                android:id="@+id/enterNumber2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/grey"
                                android:ellipsize="start"
                                android:ems="10"
                                android:fontFamily="@font/poppins_regular"
                                android:gravity="center"
                                android:hint="@string/hintValue"
                                android:importantForAutofill="no"
                                android:inputType="textPersonName"
                                android:textColor="@color/black"
                                android:textColorHint="@color/hintFont"
                                tools:ignore="DuplicateSpeakableTextCheck,TextContrastCheck,TextFields,VisualLintTextFieldSize" />
                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/voltageHeadng2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/putValues"
                        android:layout_marginStart="10sp"
                        android:layout_marginEnd="10sp"
                        android:fontFamily="@font/poppins_medium"
                        android:padding="5sp"
                        android:text="Output Voltage: "
                        android:textColor="@color/lightblack"
                        android:textSize="20sp"
                        tools:ignore="HardcodedText,TooDeepLayout" />

                    <LinearLayout
                        android:layout_below="@+id/voltageHeadng2"
                        android:id="@+id/putValues2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        tools:ignore="DuplicateIds">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="start"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:padding="10sp"
                                android:text="DISP: "
                                android:textColor="@color/lightblack"
                                android:textSize="18sp"
                                tools:ignore="HardcodedText,TooDeepLayout" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:padding="10sp"
                                android:text="MET: "
                                android:textColor="@color/lightblack"
                                android:textSize="18sp"
                                tools:ignore="HardcodedText" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="start"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/enterName2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/grey"
                                android:ellipsize="start"
                                android:ems="10"
                                android:fontFamily="@font/poppins_regular"
                                android:gravity="center"
                                android:hint="@string/hintValue"
                                android:importantForAutofill="no"
                                android:inputType="textPersonName"
                                android:textColor="@color/black"
                                android:textColorHint="@color/hintFont"
                                tools:ignore="DuplicateSpeakableTextCheck,TextContrastCheck,VisualLintTextFieldSize" />

                            <EditText
                                android:id="@+id/enterNumber2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/grey"
                                android:ellipsize="start"
                                android:ems="10"
                                android:fontFamily="@font/poppins_regular"
                                android:gravity="center"
                                android:hint="@string/hintValue"
                                android:importantForAutofill="no"
                                android:inputType="textPersonName"
                                android:textColor="@color/black"
                                android:textColorHint="@color/hintFont"
                                tools:ignore="DuplicateSpeakableTextCheck,TextContrastCheck,TextFields,VisualLintTextFieldSize" />
                        </LinearLayout>

                    </LinearLayout>
                </RelativeLayout>
                <!--            -->

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    tools:ignore="UselessParent">

                    <View
                        android:id="@+id/inputtextView"
                        android:layout_width="wrap_content"
                        android:layout_height="360sp"
                        android:background="@drawable/rectangle_check_box_big"
                        android:padding="15sp"
                        android:text="POS: "
                        tools:ignore="HardcodedText,TooDeepLayout" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:padding="10sp"
                                android:text="Run Hours: "
                                android:textColor="@color/lightblack"
                                android:textSize="18sp"
                                tools:ignore="HardcodedText,TooDeepLayout" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:padding="10sp"
                                android:text="Replay O/P: "
                                android:textColor="@color/lightblack"
                                android:textSize="18sp"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:padding="10sp"
                                android:text="FAN Operation: "
                                android:textColor="@color/lightblack"
                                android:textSize="18sp"
                                tools:ignore="HardcodedText" />


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:padding="10sp"
                                android:text="Body Condition: "
                                android:textColor="@color/lightblack"
                                android:textSize="18sp"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:padding="10sp"
                                android:text="I/O Check: "
                                android:textColor="@color/lightblack"
                                android:textSize="18sp"
                                tools:ignore="HardcodedText" />


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/poppins_medium"
                                android:padding="10sp"
                                android:text="Cleanliness: "
                                android:textColor="@color/lightblack"
                                android:textSize="18sp"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/poppins_medium"
                                android:padding="10sp"
                                android:text="Parameter Copy: "
                                android:textColor="@color/lightblack"
                                android:textSize="18sp"
                                tools:ignore="HardcodedText" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="start"
                            android:orientation="vertical">

                            <EditText
                                android:id="@+id/enterRH"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/grey"
                                android:ellipsize="start"
                                android:ems="10"
                                android:fontFamily="@font/poppins_regular"
                                android:gravity="center"
                                android:hint="@string/hintValue"
                                android:importantForAutofill="no"
                                android:inputType="textPersonName"
                                android:textColor="@color/black"
                                android:textColorHint="@color/hintFont"
                                tools:ignore="DuplicateSpeakableTextCheck,TextContrastCheck" />

                            <EditText
                                android:id="@+id/enterReplayOP"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/grey"
                                android:ellipsize="start"
                                android:ems="10"
                                android:fontFamily="@font/poppins_regular"
                                android:gravity="center"
                                android:hint="@string/hintValue"
                                android:importantForAutofill="no"
                                android:inputType="textPersonName"
                                android:textColor="@color/black"
                                android:textColorHint="@color/hintFont"
                                tools:ignore="DuplicateSpeakableTextCheck,TextContrastCheck,TextFields" />

                            <EditText
                                android:id="@+id/enterFANopr"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/grey"
                                android:ellipsize="start"
                                android:ems="10"
                                android:fontFamily="@font/poppins_regular"
                                android:gravity="center"
                                android:hint="@string/hintValue"
