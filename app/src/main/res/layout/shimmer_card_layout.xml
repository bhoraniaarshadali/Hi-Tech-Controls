<?xml version="1.0" encoding="utf-8"?>
<com.facebook.shimmer.ShimmerFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shimmer_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp"
    app:shimmer_auto_start="true"
    app:shimmer_duration="1000">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="15dp">

            <!-- ID Placeholder -->
            <View
                android:id="@+id/shimmer_id_box"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="15sp"
                android:background="@drawable/shimmer_placeholder_bg"
                tools:ignore="SmallSp" />

            <!-- Username Placeholder -->
            <View
                android:id="@+id/shimmer_username_box"
                android:layout_width="100dp"
                android:layout_height="15dp"
                android:layout_centerInParent="true"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="8dp"
                android:layout_toEndOf="@id/shimmer_id_box"
                android:background="@drawable/shimmer_placeholder_bg" />

            <!-- Progress Bar Placeholder -->
            <View
                android:id="@+id/shimmer_progress_box"
                android:layout_width="100sp"
                android:layout_height="8sp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="15sp"
                android:background="@drawable/shimmer_placeholder_bg"
                tools:ignore="SmallSp" />

            <!-- Status Placeholder -->
            <View
                android:id="@+id/shimmer_status_box"
                android:layout_width="80dp"
                android:layout_height="12dp"
                android:layout_below="@id/shimmer_progress_box"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="8sp"
                android:background="@drawable/shimmer_placeholder_bg"
                tools:ignore="SmallSp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</com.facebook.shimmer.ShimmerFrameLayout>
