<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background Vector Drawable -->
    <item android:drawable="@drawable/image_upload_0">
        <!-- Add corner radius to the background vector -->
        <shape android:shape="rectangle">
            <corners android:radius="8dp" /> <!-- Adjust the radius as needed -->
            <solid android:color="#D3DBF5" />
        </shape>
    </item>

    <!-- Foreground Vector Drawable -->
    <item
        android:bottom="12dp"
        android:drawable="@drawable/image_upload_1"
        android:left="12dp"
        android:right="12dp"
        android:top="12dp" />

    <item
        android:drawable="@drawable/image_upload_2"
        android:gravity="center" />
</layer-list>
